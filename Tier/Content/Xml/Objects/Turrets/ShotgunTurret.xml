  </attachable>

  <specific>
	  <turn_speed>1.0</turn_speed>
	  <shoot_angle>45</shoot_angle>
    <cooldown>2500</cooldown>
    <range>100</range>
    <projectile>Plasma</projectile>
    <projectile_color x="0" y="255" z="0"/>
