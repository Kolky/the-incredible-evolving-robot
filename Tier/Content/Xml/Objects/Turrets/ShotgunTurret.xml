  <effect name="DefaultTextured"/>
  
  <collision>
    <boundingbox >
      <position x="0" y="0" z="0"/>
      <bottomleft x="-1" y="-1" z="-1"/>
      <topright x="1" y="1" z="1"/>
    </boundingbox>
  </collision>

  <movable/>

